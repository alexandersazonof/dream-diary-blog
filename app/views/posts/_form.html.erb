<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :name, class: "form-control" %>
    <%= f.text_area :content, id: "content" %>
    <br>
    <%= f.input :tag_list, input_html:{data:{role:'tagsinput'}} %>
    <%= label_tag(:visibility, "Access", class: "mr-sm-2") %>
    <%= select_tag(:visibility, options_for_select([['Public', 'Public'], ['Private', 'Private']], 1), class: "custom-select mr-sm-5", name: "visibility") %>
  </div>
  <br>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary", id: "submit" %>
  </div>
<% end %>
<link rel="stylesheet" type="text/css" href="http://www.shieldui.com/shared/components/latest/css/light/all.min.css" >

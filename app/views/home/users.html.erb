<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                                <tr>
                                <th><span>User</span></th>
                                <th><span>Created</span></th>
                                <th class="text-center"><span>Role</span></th>
                                <th><span>Email</span></th>
                                <th>Posts</th>
                                <th>Comments</th>
                                <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @users.each do |user| %>
                                <%= render partial: 'home/user-item', locals: { user: user } %>
                              <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%= will_paginate @users, renderer: BootstrapPagination::Rails, class: "pagination justify-content-center mb-4" %>

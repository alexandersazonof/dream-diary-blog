<h2 class="text-center">Edit <%= @user.username %></h2>
<hr>
<%= simple_form_for(@user) do |f| %>
  <div class="form-group">
    <div class="form-group row">
      <%= f.label :username, class: "col-sm-2 col-form-label" %><br />
      <div class="col-sm-2">
        <%= f.text_field :username, autofocus: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
      <div class="col-sm-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :icon, class: "col-sm-2 col-form-label"%><br>
      <div class="col-sm-10">
        <%= f.input :icon, as: :file %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary mb-2" %>
    </div>
  </div>
<% end %>

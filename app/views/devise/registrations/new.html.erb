<h2 class="text-center">Sign up</h2>
<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">

    <div class="form-group row">
      <%= f.label :username, :class => "col-sm-2 col-form-label" %>
      <div class="col-sm-2">
        <%= f.text_field :username, :class => "form-control" %>
      </div>
    </div>

  <div class="form-group row">
    <%= f.label :email, :class => "col-sm-2 col-form-label"%>
    <div class="col-sm-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, :class => "col-sm-2 col-form-label"%>
    <div class="col-sm-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :icon, :class => "col-sm-2 col-form-label"%>
    <div class="col-sm-2">
      <%= f.file_field :icon %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-secondary" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>

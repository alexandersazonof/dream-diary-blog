<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag(comment.user.get_avatar, class: "img img-rounded img-fluid")%>
        <p class="text-secondary text-center"><%= time_ago_in_words(comment.created_at) %></p>
      </div>
      <div class="col-md-10">
        <p>
        <a class="float-left" href="#"><strong><%= comment.user.username %></strong></a>
        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
        </p>
        <div class="clearfix"></div>
          <p><%= comment.body %></p>
        	<p>
        	   <a class="float-right btn btn-outline-primary ml-2"> <i class="fa fa-reply"></i> Reply</a>
        	  <%= link_to 'Delete', [comment.post, comment],
              :method => :delete,
              data: { confirm: 'Are you sure?' },
              class: "float-right btn text-white btn-danger"
               %>
          </p>
        </div>
      </div>
    </div>
  </div>
